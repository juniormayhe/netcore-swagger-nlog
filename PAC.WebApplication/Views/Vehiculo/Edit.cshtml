@model PAC.Entities.Vehiculo

@{
    ViewData["Title"] = "Edit";
}

<h2>Vehículo</h2>

<h4>Editar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdVehiculo" />

            <div class="form-group">
                <label asp-for="Placa" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Placa" class="form-control" />
                    <span asp-validation-for="Placa" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="NumeroOrden" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="NumeroOrden" class="form-control" />
                    <span asp-validation-for="NumeroOrden" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
